<div class='student show'>

  <h2><%= @student.first.capitalize %> <%= @student.last %></h2>

    <p>Username: <%= @student.first.capitalize %></p>

    <p>Password: <%= @student.last %></p>

    <p>Attended the "<%= @student.cohort.cohort %>" <%= @student.cohort.course.course %> course in <%=Location.find(@student.id).city %>
    </p>
    <p>Graduated on <%= @student.cohort.ends_on %>.</p>

    <p>Employment Status:
      <% if @student.is_employed? == false %>
          <%= "Not Yet Employed" %>
      <% else %>
        <%= "Employed" %>
      <% end %>
    </p>

    <p>Employment Type:
      <% if @student.is_employed? == false %>
          <%= "Not Applicable" %>
      <% else %>
        <%= @student.employment_type %>
      <% end %>
    </p>

    <p>Skills: <ul class="skills">
      <% @student.skills.split(",").each do |skill| %>
                  <li><%= skill %></li>
              <% end %>
    </ul></p>

    <p>Email: <%= @student.email %></p>

    <p>Phone Number: <%= @student.phone %></p>

    <%= link_to 'Update Account', edit_student_path(@student) %>


</div>
